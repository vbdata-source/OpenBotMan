{
  "name": "openbotman-vscode",
  "displayName": "OpenBotMan",
  "description": "Multi-Agent AI Orchestration for VS Code",
  "version": "2.0.0",
  "publisher": "vbdata",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openbotman.discuss",
        "title": "OpenBotMan: Experten fragen",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "openbotman.analyzeProject",
        "title": "OpenBotMan: Projekt analysieren",
        "icon": "$(search)"
      },
      {
        "command": "openbotman.agents.status",
        "title": "OpenBotMan: Status prüfen"
      }
    ],
    "configuration": {
      "title": "OpenBotMan",
      "properties": {
        "openbotman.apiUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "OpenBotMan API Server URL"
        },
        "openbotman.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key (muss mit Server übereinstimmen)"
        }
      }
    },
    "keybindings": [
      {
        "command": "openbotman.discuss",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o"
      },
      {
        "command": "openbotman.analyzeProject",
        "key": "ctrl+shift+alt+o",
        "mac": "cmd+shift+alt+o"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openbotman",
          "title": "OpenBotMan",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "openbotman": [
        {
          "id": "openbotman.agents",
          "name": "Agents"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "echo 'VS Code extension tests require VS Code. Skipping.'",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
  }
}
