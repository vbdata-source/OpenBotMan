{
  "name": "openbotman-vscode",
  "displayName": "OpenBotMan",
  "description": "Multi-Agent AI Orchestration for VS Code",
  "version": "2.0.0",
  "publisher": "vbdata",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openbotman.discuss",
        "title": "OpenBotMan: Experten fragen",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "openbotman.reviewCode",
        "title": "OpenBotMan: Code Review (aktuelle Datei)",
        "icon": "$(eye)"
      },
      {
        "command": "openbotman.analyzeProject",
        "title": "OpenBotMan: Projekt analysieren",
        "icon": "$(search)"
      },
      {
        "command": "openbotman.agents.status",
        "title": "OpenBotMan: Status prüfen"
      },
      {
        "command": "openbotman.startServer",
        "title": "OpenBotMan: Server starten"
      }
    ],
    "configuration": {
      "title": "OpenBotMan",
      "properties": {
        "openbotman.apiUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "OpenBotMan API Server URL"
        },
        "openbotman.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key (muss mit Server übereinstimmen)"
        },
        "openbotman.timeoutMinutes": {
          "type": "number",
          "default": 60,
          "minimum": 1,
          "maximum": 180,
          "description": "Timeout für Jobs in Minuten (Default: 60)"
        },
        "openbotman.pollIntervalSeconds": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 30,
          "description": "Poll-Intervall in Sekunden (Default: 3)"
        },
        "openbotman.verboseLevel": {
          "type": "number",
          "default": 1,
          "enum": [0, 1, 2],
          "enumDescriptions": [
            "Nur Endergebnis anzeigen",
            "Agent-Resultate live anzeigen",
            "Alle Zwischengedanken anzeigen"
          ],
          "description": "Verbose-Level: 0=Nur Ergebnis, 1=Agent-Resultate, 2=Alles"
        }
      }
    },
    "keybindings": [
      {
        "command": "openbotman.discuss",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o"
      },
      {
        "command": "openbotman.reviewCode",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      },
      {
        "command": "openbotman.analyzeProject",
        "key": "ctrl+shift+alt+o",
        "mac": "cmd+shift+alt+o"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openbotman",
          "title": "OpenBotMan",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "openbotman": [
        {
          "id": "openbotman.jobs",
          "name": "Aktive Jobs"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "echo 'VS Code extension tests require VS Code. Skipping.'",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
  }
}
