# OpenBotMan Environment Variables
# Copy this to .env and fill in your values

# Anthropic API Key (for orchestrator agent)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: If your CLIs need API keys
# OPENAI_API_KEY=your_openai_key
# GOOGLE_API_KEY=your_google_key

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# API Server (if using api_server.py)
API_HOST=0.0.0.0
API_PORT=8000

# MCP Server (if using mcp_server.py)
MCP_PORT=3000
